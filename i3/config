# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:FiraCode Nerd Font 12

# # Start XDG autostart .desktop files using dex. See also
# # https://wiki.archlinux.org/index.php/XDG_Autostart
# exec --no-startup-id dex --autostart --environment i3

# Use pactl to adjust volume in PulseAudio.
bindsym XF86AudioRaiseVolume exec --no-startup-id \
    pactl set-sink-volume @DEFAULT_SINK@ +5% && \
    paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga
bindsym XF86AudioLowerVolume exec --no-startup-id \
    pactl set-sink-volume @DEFAULT_SINK@ -5% && \
    paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga
bindsym XF86AudioMute exec --no-startup-id \
    pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id \
    pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Media Control Bindings
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous
bindsym XF86AudioPlay exec --no-startup-id playerctl-fade
bindsym Shift+XF86AudioPlay exec --no-startup-id playerctl-fade --all-players

# Media Control Bindings
bindsym $mod+Mod1+l exec --no-startup-id playerctl next
bindsym $mod+Mod1+h exec --no-startup-id playerctl previous
bindsym $mod+Mod1+k exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym $mod+Mod1+j exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym $mod+Mod1+space exec --no-startup-id playerctl-fade
bindsym $mod+Mod1+Shift+space exec --no-startup-id playerctl-fade --all-players

# video controls
#bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl --min-val=2 -q set 5%-
#bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl -q set 5%+

# enable trackpad
#exec --no-startup-id xinput set-prop 13 "libinput Tapping Enabled" 1

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# popup_during_fullscreen smart|ignore|leave_fullscreen|all
popup_during_fullscreen leave_fullscreen

# set terminal to alacritty
set $term alacritty

# start a terminal
bindsym $mod+Return split h; exec $term
bindsym $mod+backslash split v; exec $term

# kill focused window
bindsym $mod+q kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left resize shrink width 30px
bindsym $mod+Shift+Down resize shrink height 30px
bindsym $mod+Shift+Up resize grow height 30px
bindsym $mod+Shift+Right resize grow width 30px

# split in horizontal/vertical orientation
bindsym $mod+semicolon split h
bindsym $mod+Shift+semicolon split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent
bindsym $mod+Shift+a focus child

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws0 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws0

bindsym $mod+y workspace number 11; focus left; workspace 12; focus right; workspace number 11

bindsym $mod+Mod1+1 workspace number $ws1; exec google-chrome --new-window https://calendar.google.com/calendar/u/0/r
bindsym $mod+Mod1+2 workspace number $ws2; exec slack
bindsym $mod+Mod1+3 workspace number $ws3; exec $term --working-directory /var/lib/cadence
bindsym $mod+Mod1+4 workspace number $ws4; exec $term --working-directory ~/repos
bindsym $mod+Mod1+5 workspace number $ws5
bindsym $mod+Mod1+6 workspace number $ws6; exec firefox
bindsym $mod+Mod1+7 workspace number $ws7; exec obsidian
bindsym $mod+Mod1+8 workspace number $ws8; exec $term --working-directory $XDG_CONFIG_HOME
bindsym $mod+Mod1+9 workspace number $ws9; exec $BROWSER --new-window https://chatgpt.com/
bindsym $mod+Mod1+0 workspace number $ws0; exec spotify

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1; workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2; workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3; workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4; workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5; workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6; workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7; workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8; workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9; workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws0; workspace number $ws0

# Cycle through tabs with Mod+Tab
bindsym $mod+Tab focus right
bindsym $mod+Shift+Tab focus left

# add keybinds to move windows between displays
bindsym $mod+n move workspace to output right
bindsym $mod+Shift+n move workspace to output left

bindsym $mod+r mode "resize"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

# reload the configuration file
bindsym $mod+Shift+r reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Control+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+Shift+Control+e exec --no-startup-id i3-msg exit

# power control bindings
bindsym $mod+Shift+Control+x exec --no-startup-id poweroff
bindsym $mod+Shift+Control+r exec --no-startup-id reboot

# # Configure additional display
# bindsym $mod+Shift+t exec --no-startup-id toggle-monitors

# set background
bindsym $mod+c exec --no-startup-id wallpaper-picker
bindsym $mod+Shift+c exec wallpaper-picker --manual
bindsym $mod+Control+c exec --no-startup-id wallpaper-picker --stop

# Screenshot bindings
bindsym --release Print exec flameshot gui -c -p "$(xdg-user-dir PICTURES)/Screenshots/"
bindsym $mod+Print exec flameshot full -c -p  "$(xdg-user-dir PICTURES)/Screenshots/"

# ---- apps ----

