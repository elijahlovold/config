bindsym $mod+o exec thunar

# open browser
bindsym $mod+g exec google-chrome

# open resource monitor
bindsym $mod+m exec $term -e btop

# open firefox
bindsym $mod+x exec firefox

# open python
bindsym $mod+p exec $term -e python3

# open vim-anywhere
bindsym $mod+Shift+v exec $term -e vim-anywhere

bindsym $mod+t exec TERM=$term todays-notes
bindsym $mod+Shift+t exec zathura /home/elovold/vault/daily_notes/Old-and-New-Testament-Bible-Reading-Plan.pdf

bindsym $mod+b exec $term -e nvim $HOME/dox/bible_kjv.txt

# open music 
bindsym $mod+Shift+m exec spotify
bindsym --release $mod+Shift+Return exec --no-startup-id spotify-queue

# ---- dmenu/rofi utils ----

# start rofi (a program launcher)
bindsym $mod+d exec rofi -show run
bindsym $mod+Ctrl+k exec rofi -show run

bindsym $mod+Ctrl+w exec rofi-wifi-menu

# open clipmenu
bindsym --release $mod+v exec --no-startup-id sh -c "CM_LAUNCHER=rofi clipmenu && xdotool key --clearmodifiers ctrl+shift+v"

